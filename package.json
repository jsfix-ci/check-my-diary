{
  "name": "check-my-diary",
  "version": "1.0.0-alpha.1",
  "license": "MIT",
  "scripts": {
    "start": "npm run css-build && node server.js",
    "start:dev": "npm build && DEBUG=gov-starter-server* nodemon server.js | bunyan -o short",
    "build": "npm run css-build",
    "css-build": "node-sass-chokidar --include-path ./node_modules/govuk_frontend_toolkit/stylesheets --include-path ./node_modules/govuk_template_jinja/assets/stylesheets --include-path ./node_modules/govuk-elements-sass/public/sass ./assets/sass/style.sass ./assets/stylesheets/application.css ./src -o ./src",
    "clean": "rm -rf public/* .port.tmp *.log build/* uploads/* test-results.xml",
    "lint": "eslint . --cache --max-warnings 0",
    "test": "NODE_ENV=test mocha test/*.spec.js test/**/*.spec.js"
  },
  "nodemonConfig": {
    "ignore": [
      ".circleci/*",
      "migrations/*",
      "node_modules/*",
      "test/*"
    ],
    "delay": "2500"
  },
  "engines": {
    "node": ">=8.11.0 < 11.0.0"
  },
  "dependencies": {
    "@mojdigital/pattern-library": "0.0.1-beta.4",
    "axios": "0.19.0",
    "body-parser": "1.18.3",
    "bunyan": "1.8.12",
    "bunyan-format": "0.2.1",
    "bunyan-request-logger": "^2.1.0",
    "compression": "1.7.3",
    "cookie-parser": "1.4.3",
    "cookie-session": "2.0.0-beta.3",
    "csurf": "1.9.0",
    "debug": "4.0.1",
    "dotenv": "6.0.0",
    "ejs": "2.6.1",
    "express": "4.16.3",
    "express-request-id": "1.4.0",
    "express-validator": "^5.3.1",
    "govuk-frontend": "1.3.0",
    "helmet": "^3.21.2",
    "http-errors": "1.7.1",
    "ip-range-check": "^0.2.0",
    "jsonwebtoken": "8.3.0",
    "knex": "^0.19.5",
    "morgan": "1.9.1",
    "node-sass-middleware": "0.11.0",
    "notifications-node-client": "4.5.1",
    "passport": "0.4.0",
    "pg": "^7.8.2",
    "sass-middleware": "0.0.3",
    "scroll-to-element": "^2.0.3"
  },
  "devDependencies": {
    "axios-mock-adapter": "1.15.0",
    "chai": "4.1.2",
    "chai-as-promised": "7.1.1",
    "chai-string": "1.5.0",
    "eslint": "5.6.0",
    "eslint-config-airbnb-base": "13.1.0",
    "eslint-plugin-import": "2.14.0",
    "mocha": "5.2.0",
    "node-sass-chokidar": "^1.3.4",
    "nodemon": "1.18.4",
    "sinon": "6.3.4"
  },
  "optionalDependencies": {
    "hoek": "5.0.4"
  },
  "proxy": {
    "/auth/*": {
      "target": "http://localhost:3000"
    },
    "/api/*": {
      "target": "http://localhost:3000"
    }
  }
}
