<%

parseDuration = function(duration) {
  const split = duration.split(':');
  const hours = parseInt(split[0], 10);
  const minutes = parseInt(split[1], 10);
  return (hours ? hours + 'hr ' : '') + (minutes ? minutes + 'min' : '');
}

parseShortDate = function(date) {
  return parseInt(date.substr(date.length - 2), 10);
}

parseDate = function(date) {
  const split = date.split('-');
  return split[2] + '/' + split[1] + '/' + split[0];
}

getNextDay = function(day) {
  const days = ['Sunday', 'Monday', 'Tuesday', 'Wednesday', 'Thursday', 'Friday', 'Saturday'];
  return days[days.indexOf(day) + 1] || 'Sunday';
}

