<%

getDays = function() {
  return ['Sunday', 'Monday', 'Tuesday', 'Wednesday', 'Thursday', 'Friday', 'Saturday'];
}

parseDuration = function(duration) {
  const split = duration.split(':');
  const hours = parseInt(split[0], 10);
  const minutes = parseInt(split[1], 10);
  return (hours ? hours + 'hr ' : '') + (minutes ? minutes + 'min' : '');
}

parseShortDate = function(date) {
  return parseInt(date.substr(date.length - 2), 10);
}

parseDate = function(date) {
  return date.split('-').reverse().join('/');
}

getNextDay = function(day) {
  const days = getDays();
  return days[days.indexOf(day) + 1] || 'Sunday';
}

getPreviousMonth = function(currentDate) {
  const splitDate = currentDate.split('-'),
    newMonth = parseInt(splitDate[1], 10) - 1;

  return [splitDate[0], ('0' + (newMonth || 1)).slice(-2), '01'].join('-');
}

getNextMonth = function(currentDate) {
  const splitDate = currentDate.split('-'),
    newMonth = parseInt(splitDate[1], 10) + 1;

  return [splitDate[0], ('0' + (newMonth < 13 ? newMonth : 12)).slice(-2), '01'].join('-');
}

