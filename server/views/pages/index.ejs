<!DOCTYPE html>
<html lang="en">
<head>
    <% include ../partials/head %>
</head>
<body>

  <% include ../partials/header %>

  <main id="content" class="app-container" role="main">
      <% include ../partials/alpha-banner %>
      <div class="grid-row">
        <div class="column-two-thirds">

            <h1 class="heading-xlarge">Login</h1>

            <% if (!apiUp || authError) { %>

              <p class="error-summary">
                <% if (apiUp) { %>
                  <%= authErrorText %>
                <% } else { %>
                  Service unavailable. Please try again later.
                <% } %>
              </p>

            <% } %>

            <form action="/auth/login" method="POST">
            <div class="form-group">
                <label for="username"><span class="form-label">Username</span></label>
                <input type="text" name="username" id="username" class="form-control" autocomplete="off" />
              </div>

            <div class="form-group">
                <label for="password"><span class="form-label">Password</span></label>
                <input type="password" name="password" id="password" class="form-control" autocomplete="off" />
              </div>

              <input type="hidden" name="_csrf" value="<%= csrfToken %>" />

              <div class="from-group">
                <input type="submit" class="button" value="Continue" />
              </div>
            </form>

        </div>

      </div>
  </main>

  <% include ../partials/footer %>

</body>
</html>
